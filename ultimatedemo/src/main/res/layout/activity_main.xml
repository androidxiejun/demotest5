<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.demotest.MainActivity">

   <Button
       android:id="@+id/banner_btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:onClick="onClick"
       android:text="BannerDemo"/>
    <Button
        android:id="@+id/ultimate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onClick"
        android:text="UltimateDemo"/>
    <Button
        android:id="@+id/birthday_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="BirthdayCharge"/>
    <Button
        android:id="@+id/take_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="TakePhone"/>
    <Button
        android:id="@+id/time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Time"/>
</LinearLayout>
